<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_fragment_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="login_sign_up_fragment_sign_up_button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_30dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="strokeWidth">50dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_10dp</item>
    </style>

    <style name="login_sign_up_fragment_login_button">
        <item name="android:layout_marginTop">@dimen/margin_30dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="borderWidth">@dimen/margin_20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="height">@dimen/margin_50dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">@dimen/margin_10dp</item>
    </style>

    <style name="login_fragment_log_in_button">
        <item name="borderWidth">@dimen/margin_4dp</item>
        <item name="backgroundTint">@color/oxblood_main</item>
        <item name="android:layout_marginTop">@dimen/margin_90dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_marginBottom">@dimen/margin_10dp</item>
    </style>
</resources>